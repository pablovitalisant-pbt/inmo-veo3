# --- Build stage ---
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci --no-audit --fund=false
COPY . .
# Asegura que VITE_API_BASE quede embebido en el build si está definido
ARG VITE_API_BASE
ENV VITE_API_BASE=${VITE_API_BASE}
RUN npm run build

# --- Serve stage (estático con node+serve) ---
FROM node:20-alpine AS run
WORKDIR /app
RUN npm i -g serve@14
COPY --from=build /app/dist /app/dist
ENV PORT=8080
EXPOSE 8080
CMD ["serve", "-s", "dist", "-l", "8080"]
